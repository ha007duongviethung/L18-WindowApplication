<Page x:ConnectionId='1'
    x:Class="IQRCode.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:IQRCode.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <NavigationView x:ConnectionId='2'
        Background="{StaticResource blue}"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        PaneDisplayMode="Left"
                                                          >
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Website" Tag="website">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE774;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="V-Card" Tag="card">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xe780;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Document" Tag="document">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xe8a5;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Email" Tag="email">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xe8c3;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Tag="facebook">
                <StackPanel
                    Margin="-4,0,0,0"
                    Orientation="Horizontal"
                    Spacing="14">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/Image/facebook.png" />

                    <TextBlock Margin="5,0,0,0" Text="Facebook" />
                </StackPanel>
            </NavigationViewItem>
            <NavigationViewItem
                Content="Wifi"
                Tag="wifi"
                Visibility="Collapsed">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE701;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Phone" Tag="phone">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE717;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="SMS" Tag="sms">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xe8bd;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>
        <Frame x:ConnectionId='3' x:Name="MyFrame" CornerRadius="8 0 0 0" />
    </NavigationView>
</Page>

