<Page
    x:Class="ManageProduct.Views.ProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:ManageProduct.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Source={StaticResource VML}, Path=ProductPage}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource green}" />
            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid Padding="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Padding="0,0,0,8" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <AutoSuggestBox x:ConnectionId='7'
                Height="35"
                ItemsSource="{Binding SearchedContacts, Mode=OneWay}"
                PlaceholderText="Search"
                QueryIcon="Find"
                                                                  
                Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                UpdateTextOnSelect="False">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="TextChanged">
                        <core:InvokeCommandAction Command="{Binding SearchContactCommand}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <AutoSuggestBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </AutoSuggestBox.ItemTemplate>
            </AutoSuggestBox>
            <Button
                Grid.Column="1"
                Background="{StaticResource green}"
                Command="{Binding AddCommand}"
                Foreground="{StaticResource white_Color}">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE710;" />
                    <TextBlock Text="Add" />
                </StackPanel>

            </Button>
        </Grid>
        <Grid
            Grid.Row="1"
            Padding="12"
            Background="{StaticResource blue}"
            CornerRadius="8 8 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="{StaticResource dark}"
                Text="Product's Name" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="{StaticResource dark}"
                Text="Quantity"
                TextAlignment="Center" />
            <TextBlock
                Grid.Column="2"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="{StaticResource dark}"
                Text="Date Added"
                TextAlignment="Center" />
            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="{StaticResource dark}"
                Text="Supplier"
                TextAlignment="Center" />
            <TextBlock
                Grid.Column="4"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="{StaticResource dark}"
                Text="Price"
                TextAlignment="Center" />
        </Grid>
        <ListView x:ConnectionId='2'
            x:Name="ListViewProduct"
            Grid.Row="2"
            Background="{StaticResource white_Color}"
            ItemsSource="{Binding products}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ListViewItem HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <ListViewItem.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:ConnectionId='4'
                                                      
                                    Tag="{Binding}"
                                    Text="Editing">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xF7BB;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem x:ConnectionId='5'
                                                        
                                    Tag="{Binding}"
                                    Text="Delete">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE74D;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem x:ConnectionId='6'
                                                        
                                    Tag="{Binding}"
                                    Text="QRCode">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xed14;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </ListViewItem.ContextFlyout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{StaticResource dark}"
                                MaxLines="3"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{StaticResource dark}"
                                MaxLines="3"
                                Text="{Binding Quantity}"
                                TextAlignment="Center"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{StaticResource dark}"
                                MaxLines="3"
                                Text="{Binding DateAdded, Converter={StaticResource DateTimeToString}}"
                                TextAlignment="Center"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{StaticResource dark}"
                                MaxLines="3"
                                Text="{Binding Supplier}"
                                TextAlignment="Center"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Column="4"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{StaticResource dark}"
                                MaxLines="3"
                                Text="{Binding Price, Converter={StaticResource DoubleToMoneyConverter}}"
                                TextAlignment="Center"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                        </Grid>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid
            Grid.Row="3"
            Padding="8"
            Background="{StaticResource white_Color}"
            CornerRadius="0 0 8 8">
            <Button
                Width="120"
                Background="{StaticResource green}"
                Command="{Binding DeleteAllCommand}"
                Content="Delete All"
                Foreground="{StaticResource white_Color}" />
        </Grid>
    </Grid>
</Page>

