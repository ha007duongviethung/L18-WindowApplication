<ContentDialog
    x:Class="MinhTamShop.Views.Dialogs.DeleteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MinhTamShop.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Delete Order"
    CornerRadius="8"
    DataContext="{Binding Source={StaticResource VML}, Path=DeleteDialog}"
    PrimaryButtonCommand="{Binding DeleteCommand}"
    PrimaryButtonText="Delete"
    SecondaryButtonText="Cancel"
    mc:Ignorable="d">

    <Grid Width="300">
        <TextBlock Text="{StaticResource delete_item}" TextWrapping="Wrap" />
    </Grid>
</ContentDialog>
